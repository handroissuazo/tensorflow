<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tensorflow.demo.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/logo"
        android:backgroundTint="@color/TranslucentGreen"
        android:orientation="vertical"
        tools:background="@drawable/logo"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/classify_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:background="#27867d"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="20dp"
            android:gravity="left"
            android:onClick="classify"
            android:padding="5dp"
            android:text="@string/classify"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/capture_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/classify_button"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:background="#27867d"
            android:gravity="left"
            android:onClick="capture"
            android:padding="5dp"
            android:text="@string/capture_images"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
